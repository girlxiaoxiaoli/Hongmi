<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lucky_wheel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beiji"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <ImageView
                    android:id="@+id/pan_wheel"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/zhuanpan" />

                <ImageView
                    android:id="@+id/zhenpan_wheel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:src="@drawable/zhen" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_click"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:text="奖项说明"
                    android:textSize="20sp" />

                <LinearLayout style="@style/layout6" >

                    <LinearLayout
                        style="@style/layout1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="一等奖:" />

                        <TextView
                            android:id="@+id/first_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="二等奖:" />

                        <TextView
                            android:id="@+id/second_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout6"
                    android:orientation="horizontal" >

                    <LinearLayout
                        style="@style/layout1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="三等奖:" />

                        <TextView
                            android:id="@+id/third_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="四等奖:" />

                        <TextView
                            android:id="@+id/fourth_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout6"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="五等奖:" />

                        <TextView
                            android:id="@+id/fifth_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_award"
                            android:gravity="left"
                            android:text="六等奖:" />

                        <TextView
                            android:id="@+id/sixth_award"
                            style="@style/content_award"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout6"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="七等奖:"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/seven_award"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>